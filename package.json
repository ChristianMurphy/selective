{
  "name": "selective",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Christian Murphy",
    "email": "Christian.Murphy.42@gmail.com",
    "url": "https://github.com/ChristianMurphy"
  },
  "scripts": {
    "format": "prettier --write *.{js,json,md}",
    "precommit": "lint-staged",
    "commit": "commit",
    "lint": "yarn lint-javascript && yarn lint-markdown && yarn lint-commit",
    "lint-commit": "commitlint --from HEAD~1",
    "lint-commit-ci": "commitlint-travis",
    "lint-javascript": "eslint --ignore-path .gitignore .",
    "lint-markdown":
      "remark . --frail --ignore-path .gitignore && eslint --ignore-path .gitignore . --ext md .",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "5.2.8",
    "@commitlint/config-conventional": "5.2.3",
    "@commitlint/config-lerna-scopes": "5.2.7",
    "@commitlint/prompt-cli": "5.2.8",
    "@commitlint/travis-cli": "5.2.8",
    "eslint": "4.14.0",
    "eslint-config-standard-jsdoc": "0.3.2",
    "eslint-plugin-jest": "21.5.0",
    "eslint-plugin-jsdoc": "3.3.0",
    "eslint-plugin-markdown": "1.0.0-beta.7",
    "husky": "0.14.3",
    "jest": "22.0.4",
    "lerna": "2.5.1",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "remark-cli": "4.0.0",
    "remark-preset-lint-consistent": "2.0.1",
    "remark-preset-lint-recommended": "3.0.1",
    "remark-validate-links": "7.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "standard-jsdoc"
    ],
    "plugins": ["jest", "jsdoc", "markdown"],
    "env": {
      "jest/globals": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    }
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write", "git add"]
  },
  "remarkConfig": {
    "settings": {
      "ignoreName": ".gitignore"
    },
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent",
      "validate-links",
      ["remark-lint-list-item-indent", "mixed"]
    ]
  },
  "renovate": {
    "extends": ["config:base"],
    "automerge": true,
    "major": {
      "automerge": false
    },
    "lockFileMaintenance": {
      "enabled": true
    },
    "semanticPrefix": "chore:",
    "semanticCommitScope": ""
  },
  "workspaces": ["@selective/*"]
}
